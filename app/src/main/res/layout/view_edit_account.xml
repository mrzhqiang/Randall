<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="editAccount"
        type="com.github.mrzhqiang.randall.viewmodel.EditAccountViewModel"
        />
  </data>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:cardBackgroundColor="@android:color/white"
      app:cardElevation="2dp"
      app:cardUseCompatPadding="true"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        >
      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:counterEnabled="true"
          app:counterMaxLength="15"
          app:errorEnabled="true"
          app:errorTextAppearance="@style/TextAppearance.Design.Error"
          tools:error="@{editAccount.usernameError}"
          >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/char_number"
            android:enabled="@{editAccount.usernameEnabled}"
            android:hint="@string/username_hint"
            android:inputType="text|number"
            android:text="@={editAccount.usernameText}"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:counterEnabled="true"
          app:counterMaxLength="15"
          app:errorEnabled="true"
          app:errorTextAppearance="@style/TextAppearance.Design.Error"
          tools:error="@{editAccount.passwordError}"
          >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/char_number"
            android:enabled="@{editAccount.passwordEnabled}"
            android:hint="@string/password_hint"
            android:inputType="text|number"
            android:text="@={editAccount.passwordText}"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />
      </android.support.design.widget.TextInputLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
</layout>
