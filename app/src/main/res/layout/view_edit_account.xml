<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="editAccount"
        type="com.github.mrzhqiang.randall.viewmodel.EditAccountViewModel"
        />
  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="12dp"
      >
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:error="@{editAccount.usernameError}"
        app:errorEnabled="true"
        >
      <android.support.design.widget.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:digits="@string/char_number"
          android:hint="@string/username_hint"
          android:inputType="text"
          android:text="@={editAccount.username}"
          android:textAppearance="@style/TextAppearance.AppCompat"
          />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:error="@{editAccount.passwordError}"
        app:errorEnabled="true"
        >
      <android.support.design.widget.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:digits="@string/char_number"
          android:hint="@string/password_hint"
          android:inputType="text"
          android:text="@={editAccount.password}"
          android:textAppearance="@style/TextAppearance.AppCompat"
          />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/choose_hint"
          />
      <Button
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:onClick="@{editAccount.chooseServer}"
          android:text="@{editAccount.serverName}"
          tools:text="[永恒]"
          style="@style/Widget.AppCompat.Button.Borderless.Colored"
          />
    </LinearLayout>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onCheckedChanged="@{editAccount.registerChanged}"
        android:text="@string/register_new_account"
        android:checked="false"
        android:textColor="@color/colorAccent"
        app:buttonTint="@color/colorAccent"
        />
  </LinearLayout>
</layout>
