<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="editAccount"
        type="com.github.mrzhqiang.randall.viewmodel.EditAccountViewModel"
        />
  </data>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:minHeight="100dp"
      android:padding="12dp"
      >
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="@{editAccount.loadingVisibility}"
        tools:visibility="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="@{editAccount.inputVisibility}"
        >
      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:error="@{editAccount.usernameError}"
          app:errorEnabled="true"
          >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/char_number"
            android:enabled="@{editAccount.usernameEnabled}"
            android:hint="@string/username_hint"
            android:inputType="text"
            android:text="@={editAccount.usernameText}"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:error="@{editAccount.passwordError}"
          app:errorEnabled="true"
          >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/char_number"
            android:enabled="@{editAccount.passwordEnabled}"
            android:hint="@string/password_hint"
            android:inputType="text"
            android:text="@={editAccount.passwordText}"
            android:textAppearance="@style/TextAppearance.AppCompat"
            />
      </android.support.design.widget.TextInputLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:visibility="@{editAccount.advancedVisibility}"
          >
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={editAccount.batchChecked}"
            android:text="@string/batch_username"
            android:textColor="@color/colorAccent"
            app:buttonTint="@color/colorAccent"
            tools:checked="true"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/start_index"
            android:inputType="number"
            android:maxLength="2"
            android:text="@={editAccount.startIndex}"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:visibility="@{editAccount.startVisibility}"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/create_count"
            android:inputType="number"
            android:maxLength="2"
            android:text="@={editAccount.createCount}"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:visibility="@{editAccount.createVisibility}"
            />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:visibility="@{editAccount.advancedVisibility}"
          >
        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@={editAccount.randomChecked}"
            android:text="@string/random_password"
            android:textColor="@color/colorAccent"
            app:buttonTint="@color/colorAccent"
            tools:checked="false"
            />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawableStart="@drawable/ic_update"
            android:onClick="@{editAccount.clickRandom}"
            android:text="@string/next_random"
            android:visibility="@{editAccount.randomVisibility}"
            tools:visibility="invisible"
            style="@style/Widget.AppCompat.Button.Colored"
            />
      </LinearLayout>
    </LinearLayout>
  </FrameLayout>
</layout>
