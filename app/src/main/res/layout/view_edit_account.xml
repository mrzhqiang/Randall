<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="editAccount"
        type="com.github.mrzhqiang.randall.viewmodel.EditAccountViewModel"
        />
  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="12dp"
      >
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:error="@{editAccount.usernameError}"
        app:errorEnabled="true"
        >
      <android.support.design.widget.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:digits="@string/char_number"
          android:enabled="@{editAccount.usernameEnabled}"
          android:hint="@string/username_hint"
          android:inputType="text"
          android:text="@={editAccount.username}"
          android:textAppearance="@style/TextAppearance.AppCompat"
          />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:error="@{editAccount.passwordError}"
        app:errorEnabled="true"
        >
      <android.support.design.widget.TextInputEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:digits="@string/char_number"
          android:enabled="@{editAccount.passwordEnabled}"
          android:hint="@string/password_hint"
          android:inputType="text"
          android:text="@={editAccount.password}"
          android:textAppearance="@style/TextAppearance.AppCompat"
          />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >
      <android.support.v7.widget.AppCompatCheckBox
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:checked="@={editAccount.batchChecked}"
          android:text="@string/batch_username"
          android:textColor="@color/colorAccent"
          app:buttonTint="@color/colorAccent"
          tools:checked="true"
          />
      <Space
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          />
      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="@string/start_index"
          android:inputType="number"
          android:visibility="@{editAccount.startVisibility}"
          android:text="@={editAccount.startIndex}"
          android:textAppearance="@style/TextAppearance.AppCompat"
          />
      <EditText
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="@string/create_count"
          android:inputType="number"
          android:visibility="@{editAccount.createVisibility}"
          android:text="@={editAccount.createCount}"
          android:textAppearance="@style/TextAppearance.AppCompat"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        >
      <android.support.v7.widget.AppCompatCheckBox
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:checked="@={editAccount.randomChecked}"
          android:text="@string/random_password"
          android:textColor="@color/colorAccent"
          app:buttonTint="@color/colorAccent"
          tools:checked="false"
          />
      <Space
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableStart="@drawable/ic_update"
          android:onClick="@{editAccount.clickRandom}"
          android:text="@string/next_random"
          android:visibility="@{editAccount.randomVisibility}"
          tools:visibility="gone"
          style="@style/Widget.AppCompat.Button.Colored"
          />
    </LinearLayout>
  </LinearLayout>
</layout>
